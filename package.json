{
  "name": "vue3-pdf-viewer-component",
  "version": "1.0.4",
  "description": "A Vue 3 (Composition API + TypeScript) wrapper around PDF.js viewer, ported from ng2-pdfjs-viewer and fully self-contained.",
  "type": "module",
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js"
    }
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "vue": ">=3.2.0"
  },
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "pdf",
    "pdf.js",
    "viewer"
  ],
  "repository": {
    "type": "git",
    "url": "git+git@github.com:tomerof/vue3-pdfjs-viewer-component.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev:example": "vite --config example/vite.config.ts",
    "build": "vite build && npm run build:types && node scripts/copy-assets.js",
    "build:types": "vue-tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "build:example": "vite build --config example/vite.config.ts",
    "preview:example": "vite preview --config example/vite.config.ts",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall-copy.js || true"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vue": "^3.5.12",
    "vue-tsc": "^2.1.6"
  },
  "dependencies": {
    "@types/node": "^24.9.2",
    "install": "^0.13.0",
    "npm": "^11.6.2"
  }
}
